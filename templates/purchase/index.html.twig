{% extends "base.html.twig" %}

{% block title %}
	Mes commandes
{% endblock %}

{% block body %}
	<h1>Mes commandes</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Numero</th>
				<th>Adresse</th>
				<th>Date de commande</th>
				<th>Produits</th>
				<th>Total</th>
			</tr>
		</thead>
		<tbody>
			{% for p in purchases %}
				<tr>
					<td>{{p.id}}</td>
					<td>{{p.address}}
						<br>
						{{p.postalCode}}
						,
						{{p.city}}</td>
					<td>{{p.purchaseAt|date('d/m/y H:i')}}</td>
					<td>
						<ul>
							{% for product in p.purchaseItems %}
								<li>{{product.quantity}}
									x
									{{product.productName}}
									({{product.productPrice/ 100}}) &euro;</li>
							{% endfor %}
						</ul>
					</td>
					<td>{{p.total / 100}}&euro;</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
