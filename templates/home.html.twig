{% extends "base.html.twig" %}

{% block title %}
	Acceuil
{% endblock %}

{% block body %}

	<h1>Nos produits phares
	</h1>
	<div class="row">
		{% for p in products %}
			<div class="col">
				<div class="card">
					<img src="{{p.mainPicture}}" class="img-fluid">
					<div class="card-body">
						<h4 class="card-title">{{p.name}}
							({{p.price / 100}}&euro;)</h4>
						<span style='background-color:red;' class="badge badge-info">{{p.category.name}}</span>
						<p class="card-text">{{p.shortDescription}}</p>
						<a href="{{path('product_show',{'category_slug':p.category.slug,'slug':p.slug})}}" class="btn btn-primary btn-sm">Details</a>
						<a href="#" class="btn btn-success btn-sm">Ajouter</a>
					</div>
				</div>
			</div>
		{% endfor %}

	</div>
	<hr>
	<h2>Un service irreprochable</h2>
	<p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Minus, ducimus praesentium officia omnis facere sapiente.</p>

	<div class="row">
		{% include "shared/_assurance.html.twig" with {
            'color':'primary',
            'icone':'fas fa-truck',
            'text':'Je suis la ....'
        } %}
		{% include "shared/_assurance.html.twig" with {
            'color':'success',
            'icone':'fas fa-check',
            'text':'Je suis la ....'
        } %}
		{% include "shared/_assurance.html.twig" with {
            'color':'warning',
            'icone':'fas fa-lock',
            'text':'Je suis la ....'
        } %}
	</div>

{% endblock %}
